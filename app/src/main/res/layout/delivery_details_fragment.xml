<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.delegatesAccountants.fragments.OrdersDeliveryFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@color/colorOrange55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:id="@+id/closeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orderTopDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeImg">

        <TextView
            android:textAlignment="viewStart"
            android:id="@+id/deliveryNumb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:fontFamily="@font/ffshamelfamily_sansonebold"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="أمر توصيل رقم 135655"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/price"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/deliverCurrancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رس"
            android:layout_marginEnd="@dimen/_24sdp"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toTopOf="@+id/deliveryNumb"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:layout_marginEnd="@dimen/_2sdp"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textStyle="bold"
            android:fontFamily="@font/ffshamelfamily_sansonebold"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            app:layout_constraintStart_toEndOf="@+id/deliveryNumb"
            app:layout_constraintEnd_toStartOf="@+id/deliverCurrancy"
            app:layout_constraintTop_toTopOf="@+id/deliverCurrancy"
            tools:layout_editor_absoluteX="289dp" />

        <TextView
            android:textAlignment="viewStart"
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/cairo_semibold"
            android:layout_marginStart="@dimen/_24sdp"
            android:textColor="@color/text_black"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="سامسونغ غالاكسي إس"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pieceCount"
            app:layout_constraintTop_toBottomOf="@+id/deliveryNumb" />

        <TextView
            android:id="@+id/pieceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/piece"
            android:layout_marginEnd="@dimen/_24sdp"
            android:textSize="12sp"
            android:textColor="@color/text_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/name"
            />

        <TextView
            android:id="@+id/pieceCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:fontFamily="@font/ffshamelfamily_sansonebold"
            app:layout_constraintEnd_toStartOf="@+id/pieceText"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="@+id/pieceText" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/detailsCard"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/orderTopDetailsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            >


            <TextView
                android:visibility="gone"
                android:textAlignment="viewStart"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/storename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="مخزن الكترونيات / متجر 1"
                app:layout_constraintEnd_toStartOf="@+id/date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 محرم 1450"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleColored"
                android:layout_width="10dp"
                android:layout_height="11dp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@color/orange_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/storename" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/orange_color"
                android:text="@string/product_status"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/circleColored"
                app:layout_constraintTop_toBottomOf="@+id/storename" />


            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waiting"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/orange_color"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/status"
                app:layout_constraintTop_toBottomOf="@+id/storename"
                app:layout_constraintBottom_toBottomOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsCard"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_60sdp"
            >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detailsProdCard"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"

                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">


                    <TextView
                        android:textAlignment="viewStart"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:id="@+id/nameCard"
                        android:textSize="13sp"
                        android:textColor="@color/black_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="سامسونغ غالاكسي إس"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/priceCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="475"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:textColor="@color/black_bold"
                        android:textStyle="bold"
                        android:fontFamily="@font/ffshamelfamily_sansonebold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nameCard" />

                    <TextView
                        android:id="@+id/currancyCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:textColor="@color/text_grey"
                        android:text="رس"
                        app:layout_constraintTop_toBottomOf="@+id/nameCard"
                        app:layout_constraintStart_toEndOf="@+id/priceCard"
                        />

                    <ImageView
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/currancyCard"
                        android:src="@drawable/image_samsung"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:scaleType="centerCrop"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>



            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/userCard"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/statusImageOrder"
                    android:layout_width="10dp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_height="11dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@color/green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/green"
                    android:text="@string/product_status"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/statusImageOrder"
                    app:layout_constraintStart_toEndOf="@+id/statusImageOrder"
                    app:layout_constraintTop_toTopOf="@+id/statusImageOrder" />


                <TextView
                    android:id="@+id/statusTextValues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/statusImageOrder"
                    app:layout_constraintStart_toEndOf="@+id/statusTextView"
                    app:layout_constraintTop_toTopOf="@id/statusImageOrder"

                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/ic_img_placeholer_side"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#166e6e6e"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintTop_toBottomOf="@+id/statusImageOrder"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:id="@+id/userImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/userImage"
                    app:layout_constraintTop_toTopOf="@+id/userImage"
                    android:id="@+id/userNameText"
                    android:text="Abdelrahman Salah"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

                <TextView
                    app:layout_constraintStart_toStartOf="@+id/userNameText"
                    app:layout_constraintTop_toBottomOf="@+id/userNameText"
                    android:id="@+id/phoneNumberText"
                    android:text="+201286617935"
                    android:textColor="@color/text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumberText"
                android:id="@+id/headerDelivery"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/address_delivery"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detailsMapCard"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.google.android.gms.maps.MapView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/orderMap"
                        android:layout_width="match_parent"
                        android:layout_height="163dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/orderMap"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical">

                        <ImageView
                            app:srcCompat="@drawable/ic_location"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_14sdp"
                            android:id="@+id/addressIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/mapAddress"

                            />

                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            android:textColor="@color/textColor"
                            android:textAlignment="viewStart"
                            android:maxLines="2"
                            android:ellipsize="end"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/addressIcon"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:id="@+id/mapAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="الرياض ، عاصمة المملكة العربية السعودية " />

                        <TextView
                            android:id="@+id/mapName"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:text="احمد بن صالح الشامي"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            android:textColor="@color/textColor"
                            android:textAlignment="viewStart"
                            android:layout_marginTop="@dimen/_7sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/mapAddress"
                            app:layout_constraintTop_toBottomOf="@+id/mapAddress" />

                        <TextView
                            android:id="@+id/mapPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" +966 00000 0000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            android:textColor="@color/textColor"
                            android:textAlignment="viewStart"
                            android:layout_marginTop="@dimen/_7sdp"
                            app:layout_constraintStart_toStartOf="@+id/mapAddress"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mapName"
                            />

                        <TextView
                            android:id="@+id/mapEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="trose@buzzbean.info"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textSize="14sp"
                            android:textColor="@color/black_bold"
                            android:textAlignment="viewStart"
                            android:layout_marginTop="@dimen/_7sdp"
                            app:layout_constraintStart_toStartOf="@+id/mapAddress"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mapPhone"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/priceDeliveryCard"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_24sdp"
                android:layout_height="116dp"
                app:cardElevation="5dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/feeConrainer"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_marginEnd="@dimen/_14sdp"
                        >

                        <TextView
                            android:textAlignment="viewStart"
                            android:id="@+id/feeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/feeValue"
                            android:textColor="@color/login_gray"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/feePrice"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/feeCurrancy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="رس"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/login_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/feePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.200 "
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/login_gray"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/feeText"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            app:layout_constraintEnd_toStartOf="@+id/feeCurrancy"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/feeConrainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/shippingContainer"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_marginEnd="@dimen/_14sdp"
                        >

                        <TextView
                            android:textAlignment="viewStart"
                            android:id="@+id/shippingText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/shipping_fee"
                            android:textColor="@color/login_gray"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/shippingPrice"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/shippingCurrancy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="رس"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/login_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/shippingPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/login_gray"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/shippingText"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            app:layout_constraintEnd_toStartOf="@+id/shippingCurrancy"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
