<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/categoryImg"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:srcCompat="@drawable/ic_category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="سامسونغ"
            android:fontFamily="@font/cairo_semibold"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/categoryImg"
            app:layout_constraintTop_toTopOf="@+id/categoryImg" />

        <TextView
            android:id="@+id/categoryDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="موبيل / الكترونيات"
            android:textSize="12sp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/cairo_regular"
            android:textColor="@color/text_black"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintEnd_toStartOf="@+id/layoutCount"
            app:layout_constraintTop_toBottomOf="@+id/categoryName"
            app:layout_constraintBottom_toBottomOf="@+id/categoryImg"
            app:layout_constraintStart_toStartOf="@+id/categoryName" />


        <LinearLayout
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/layoutCount"
            app:layout_constraintStart_toEndOf="@+id/categoryDescription"
            app:layout_constraintBottom_toBottomOf="@+id/categoryDescription"
            app:layout_constraintTop_toTopOf="@+id/categoryDescription"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryCount"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/ffshamelfamily_sansonebold"
                android:textColor="@color/text_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/piece"
                android:textSize="12sp"
                android:textColor="@color/text_black"
                />



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>