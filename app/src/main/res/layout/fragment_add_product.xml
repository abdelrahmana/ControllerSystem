<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.addproduct.AddProductFragment">


    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorOrange55"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">

     <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:tint="@color/black"
        android:layout_marginStart="@dimen/_18sdp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back_button"
        />

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:text="@string/add_product"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:text="@string/product_image"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardElevation="1dp"
        android:layout_width="@dimen/_100sdp"
        app:cardCornerRadius="15dp"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="1dp"
        android:layout_marginTop="@dimen/_13sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="@dimen/_90sdp">

        <LinearLayout
            android:id="@+id/openGalleryLayout"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/light_orange"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_18sdp"
                android:text="+"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textAlignment="center"
                android:textColor="@color/add_product_gray"
                android:layout_marginTop="@dimen/_13sdp"
                android:textSize="@dimen/_18sdp"
                android:text="@string/gallery_presenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardElevation="1dp"
            android:minWidth="@dimen/_100sdp"
            android:minHeight="@dimen/_90sdp"
            android:layout_width="wrap_content"
            app:cardCornerRadius="15dp"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="1dp"
            android:layout_marginTop="@dimen/_13sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/openCamLayout"
                android:minWidth="@dimen/_100sdp"
                android:minHeight="@dimen/_90sdp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:tint="@color/selctedOrange"
                    app:srcCompat="@drawable/ic_photo"
                    android:textColor="@color/light_orange"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textAlignment="center"
                    android:textColor="@color/add_product_gray"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/photo_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/imagesListRecycler"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_marginTop="@dimen/_23sdp"
        android:textSize="@dimen/_12sdp"
        android:text="@string/productName"
        android:textColor="@color/black"
        android:textAlignment="viewStart"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        >
        <!-- android:drawableStart="@drawable/ic_person_icon"-->
        <EditText
            android:id="@+id/productNameEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:theme="@style/adding_loginstate"
            android:textSize="@dimen/_12sdp"
            android:hint="@string/productName"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:visibility="gone"
            android:drawableStart="@drawable/ic_error_input"
            android:drawablePadding="@dimen/_5sdp"
            android:id="@+id/errorProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/error_color"
            app:layout_constraintStart_toStartOf="@+id/productNameEditText"
            app:layout_constraintTop_toBottomOf="@+id/productNameEditText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginTop="@dimen/_23sdp"
        android:textSize="@dimen/_12sdp"
        android:text="@string/describe_product"
        android:textColor="@color/black"
        android:textAlignment="viewStart"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@+id/description_text"
        style="@style/Widget.MaterialComponents.CardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:cardElevation="5dp"
        app:cardMaxElevation="@dimen/_15sdp"
        android:maxWidth="@dimen/_200sdp"
        android:theme="@style/Widget.MaterialComponents.CardView"
        android:id="@+id/orderMaterial"
        app:strokeWidth="1dp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/material_card"
        app:strokeColor="@color/material_card"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_100sdp">
        <EditText
            android:id="@+id/describeProductEditText"
            android:gravity="top|start"
            android:textAlignment="viewStart"
            android:paddingTop="10dp"
            android:padding="@dimen/_16sdp"
            android:minHeight="@dimen/_100sdp"
            android:background="@null"
            android:textColor="@color/black_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="@dimen/_12sdp"
            android:text="@string/numberof_delivery"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            app:srcCompat="@drawable/ic_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_90sdp"
            app:cardCornerRadius="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/light_gray"
            app:cardElevation="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp">
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:text="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
        <ImageView
            android:layout_marginStart="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_23sdp"
        android:textSize="@dimen/_12sdp"
        android:text="@string/product_level"
        android:textColor="@color/black"
        android:textAlignment="viewStart"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@+id/description_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/materialProduct"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:minHeight="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/orange_color"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:minHeight="@dimen/_32sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="viewStart"
                android:id="@+id/addProdClassifyTxt"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_side_arrow"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/product_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:layout_marginTop="@dimen/_23sdp"
        android:textSize="@dimen/_12sdp"
        android:text="@string/save_store"
        android:textColor="@color/black"
        android:textAlignment="viewStart"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@+id/description_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/materialSave"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:minHeight="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/orange_color"
        android:layout_height="wrap_content">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:minHeight="@dimen/_32sdp"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <TextView
              android:textAlignment="viewStart"
              android:id="@+id/storeClassificationTxt"
              android:layout_marginEnd="@dimen/_10sdp"
              android:textColor="@color/white"
              android:drawableStart="@drawable/ic_side_arrow"
              android:layout_marginStart="@dimen/_10sdp"
              android:text="@string/save_store"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_12sdp"
        android:text="@string/price"
        android:textColor="@color/black"
        android:textAlignment="viewStart"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        >
        <!-- android:drawableStart="@drawable/ic_person_icon"-->
        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:theme="@style/adding_loginstate"
            android:textSize="@dimen/_12sdp"
            android:hint="@string/price"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="8dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:visibility="gone"
            android:drawableStart="@drawable/ic_error_input"
            android:drawablePadding="@dimen/_5sdp"
            android:id="@+id/errorPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/error_color"
            app:layout_constraintStart_toStartOf="@+id/priceEditText"
            app:layout_constraintTop_toBottomOf="@+id/priceEditText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/login_gray"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/login_gray"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/current_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/barCodeTxt"
        android:textColor="@color/login_gray"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/openScanCamera"
        android:minWidth="@dimen/_100sdp"
        android:minHeight="@dimen/_90sdp"
        android:layout_width="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="1dp"
        android:layout_marginTop="@dimen/_13sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:tint="@color/login_gray"
                app:srcCompat="@drawable/ic_photo"
                android:textColor="@color/light_orange"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textAlignment="center"
                android:textColor="@color/login_gray"
                android:layout_marginTop="@dimen/_13sdp"
                android:textSize="@dimen/_18sdp"
                android:text="@string/photo_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addProductButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:backgroundTint="@color/orange_color"
        app:cornerRadius="7dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
