<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.storesproducts.adapters.StoreDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorOrange55"
        >
        <ImageView
            android:id="@+id/backProdDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ab_back_light" />

        <TextView
            android:text="@string/storeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/ffshamelfamily_sansonebold"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backProdDetails"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/titleContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderView
                android:visibility="gone"
                android:id="@+id/detailsSlider"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_240sdp"
                android:layout_gravity="center"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleEnabled="true"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="2dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorRtlMode="auto"
                app:sliderScrollTimeInSec="3"
                app:sliderStartAutoCycle="true"
                android:layout_marginTop="@dimen/_30sdp"

                />


            <ImageView
                app:srcCompat="@drawable/ic_stores_img"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_190sdp"
                android:id="@+id/image_slider"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                />
            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:background="@color/darkOrange"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <com.google.android.material.card.MaterialCardView
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_150sdp"
                style="@style/cardDialog"
                android:layout_marginBottom="@dimen/_100sdp"
                >


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/_150sdp"
                    >

                    <TextView
                        android:id="@+id/DetailsStoreNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_margin="@dimen/_10sdp"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/black_bold"
                        />
                    <TextView
                        android:id="@+id/DetailsStoreLocationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_margin="@dimen/_10sdp"
                        android:text=""
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_shape"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black_bold"
                        />

                    <TextView
                        android:id="@+id/DetailsAccTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_margin="@dimen/_10sdp"
                        android:text="@string/belongD"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black_bold"
                        />

                    <TextView
                        android:id="@+id/DetailsAccNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text=""
                        android:drawableStart="@drawable/ic_username_gray"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black_bold"
                        />

                    <TextView
                        android:id="@+id/categoryNameTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_margin="@dimen/_10sdp"
                        android:text="@string/categoryName"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black_bold"
                        />

                    <TextView
                        android:id="@+id/DetailStoreCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text=""
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black_bold"
                        />




                </LinearLayout>






            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>






    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>