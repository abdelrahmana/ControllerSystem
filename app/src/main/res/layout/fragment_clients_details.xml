<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.specialcustomers.ClientsDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorOrange55"
        >
        <ImageView
            android:id="@+id/backClientDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ab_back_light" />

        <TextView
            android:id="@+id/titleTxt"
            android:text="@string/clientsDteails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/ffshamelfamily_sansonebold"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backClientDetails"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/titleContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_200sdp"
                android:id="@+id/clientDetailsImage"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_img_placeholer_side"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                />
            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:background="@color/darkOrange"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_150sdp"
                style="@style/cardDialog"
                android:layout_marginBottom="@dimen/_30sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/_150sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/clientDetailsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_margin="@dimen/_10sdp"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="@dimen/_15ssp"
                        android:drawableStart="@drawable/ic_username_gray"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@color/black_bold"
                        />


                    <TextView
                        android:id="@+id/clientPhoneName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_margin="@dimen/_10sdp"
                        android:text=""
                        android:textSize="@dimen/_10ssp"
                        android:drawableStart="@drawable/ic_phone_call"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@color/black_bold"
                        />

                    <TextView
                        android:id="@+id/clientDetailsLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_margin="@dimen/_10sdp"
                        android:text=""
                        android:textSize="@dimen/_10ssp"
                        android:drawableStart="@drawable/ic_shape"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@color/black_bold"
                        />


                    <TextView
                        android:id="@+id/clientDetailsEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:layout_margin="@dimen/_10sdp"
                        android:text=""
                        android:textSize="@dimen/_10ssp"
                        android:drawableStart="@drawable/ic_baseline_mail_outline_24"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@color/black_bold"
                        />

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/black_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receipt"
                        />

                    <LinearLayout
                        android:id="@+id/layoutReceipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/receiptPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            android:textColor="@color/text_green"
                            />

                        <TextView
                            android:id="@+id/receiptCurrancy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_green"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            />



                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/creditor"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/black_bold"

                        />

                    <LinearLayout
                        android:id="@+id/layoutCreditor"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/creditorPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            android:textColor="@color/pink_color"
                            />

                        <TextView
                            android:id="@+id/creditorCurrancy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            android:textColor="@color/pink_color"
                            />



                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/black_bold"
                        />

                    <LinearLayout
                        android:id="@+id/layoutPrice"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/totalPriceCustomer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            android:textColor="@color/textColor"
                            />

                        <TextView
                            android:id="@+id/currancyCustomer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/ffshamelfamily_sansonebold"
                            android:textColor="@color/textColor"
                            />



                    </LinearLayout>




                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteClientsBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_100sdp"
                app:backgroundTint="@color/logout_red"
                app:cornerRadius="7dp"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"/>




        </LinearLayout>









    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>